    "chalk": "^3.0.0",
    "meow": "6.0.0",
    "update-notifier": "^4.0.0"
  },
  "devDependencies": {
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "semantic-release": "^17.0.2"
  },
  "husky": {
